  "capabilities": [
    "windowcoverings_set",
    "windowcoverings_state",
    "battery",
    "connected",
    "speed",
    "rssi",
    "disconnect",
    "connect",
    "favorite"
  ],
  "platforms": ["local", "cloud"],
  "connectivity": ["ble"],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
